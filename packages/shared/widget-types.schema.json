{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "widget-types.schema.json",
  "title": "Widget Types Schema",
  "description": "JSON Schema for validating widget-types.json - ensures TypeScript and Python stay in sync",
  "type": "object",
  "required": ["types"],
  "properties": {
    "description": {
      "type": "string",
      "description": "Description of the file origin"
    },
    "generated": {
      "type": "string",
      "description": "Story ID that generated this file"
    },
    "types": {
      "type": "array",
      "description": "List of widget type names",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[A-Z][a-zA-Z0-9]*$",
        "description": "Widget type name in PascalCase"
      }
    }
  },
  "additionalProperties": false
}
