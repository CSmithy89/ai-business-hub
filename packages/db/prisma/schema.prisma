  sam                 Json?
  som                 Json?

  // Competitor Mapping (Story 08.9)
  competitors         Json?    // [{ name, type, pricing, features, strengths, weaknesses, source_url }]
  positioningMap      Json?    // { axes: [], positions: [] }
  opportunityGaps     Json?    // []

