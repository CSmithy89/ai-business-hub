# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_AGENT_API_URL=http://localhost:8001  # FastAPI agent endpoints
NEXT_PUBLIC_URL=http://localhost:3000    # Base URL for verification links

# Authentication
BETTER_AUTH_SECRET=xxx              # JWT signing secret (openssl rand -base64 32)
BETTER_AUTH_URL=http://localhost:3000

# OAuth Providers
# Google OAuth (Story 01.5)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft OAuth (Story 09.1) - Azure AD
# Setup: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
# Redirect URI: {BETTER_AUTH_URL}/api/auth/callback/microsoft
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# GitHub OAuth (Story 09.2)
# Setup: https://github.com/settings/developers -> New OAuth App
# Redirect URI: {BETTER_AUTH_URL}/api/auth/callback/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email Service (Story 01.2)
RESEND_API_KEY=test                 # Get from https://resend.com (use "test" for local dev console logging)

# Feature Flags (future)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
